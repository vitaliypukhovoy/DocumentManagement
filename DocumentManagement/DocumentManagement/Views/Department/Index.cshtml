@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="Department" ng-app="app">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel panel-heading" style="font: bold 28px'Helvetica Neue', Sans-Serif;
         text-transform: uppercase;
             background-color: #eee;
             color:green;">Departments List</div>
                <table class="table table-boarder table-hover">
                    <tr>
                        <td><b>Id</b></td>
                        <td><b>Department</b></td>
                        <td><b>Action</b></td>
                    </tr>
                    <tr ng-repeat="dep in departments">
                        <td>{{dep.IdDepartment}}</td>
                        <td>{{dep.DepartmentName}}</td>
                        <td>
                            <span ng-click="editDepartment(dep)" class="btn btn-primary">Edit</span>
                            <span ng-click="deleteDepartment(dep)" class="btn btn-danger">Delete</span>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    @*<span class="col-md-6">*@
    <button class="btn btn-primary" ng-click="AddDepartment()">Add department</button>
    @*</span>*@
    <br />
    <br />

    <modal title={{Action}} visible="ShowModal">
        <div class="panel panel-heading"> {{Action}} department </div>
        <input type="hidden" class="form-control" id="Id_Department" ng-model="$parent.Id_Department" placeholder="Id department" />
        <div class="row">
            <label class="col-md-3 text-nowrap text-right">Department</label>
            <span class="col-md-6">
                <input type="text" class="form-control" id="Name_Department" ng-model="$parent.Name_Department" placeholder="Name department" />
            </span>
        </div>
        <br />
        <div class="row">
            <label class="col-md-3 text-nowrap text-right">Company</label>
            <span class="col-md-6">
                <select class="form-control" ng-model="$parent.selected"
                        ng-options="com.value for com in Companies track by com.option"></select>

            </span>
        </div>
        <br />
        <br />
        <div class="row">
            <input type="submit" value="Ok" class="btn btn-primary" ng-click="UpdateAddDepartment()" />
            <input type="submit" value="Cancel" class="btn btn-warning" data-dismiss="modal" />
        </div>
    </modal>
           
